{
  "compileOnSave": false,
  "compilerOptions": {
    "importHelpers": true,
    "module": "es2020",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": false,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "target": "ES2022",
    "typeRoots": [
      "node_modules/@types",
      "typings"
    ],
    "lib": [
      "es2020",
      "es2021.Promise",
      "es2022.Error",
      "dom",
      "dom.Iterable"
    ],
    "paths": {
      "@servoy/public": [
        "../projects/servoy-public/src/public-api",
        "./projects/servoy-public/src/public-api",
        "../servoy-public/src/public-api"
      ]
    },
    "outDir": "./out-tsc/app",
    "useDefineForClassFields": false
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "strictTemplates": true
  }
}
