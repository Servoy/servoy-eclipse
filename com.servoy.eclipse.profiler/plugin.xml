<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>

   <extension
         point="org.eclipse.ui.views">
      <view
            allowMultiple="false"
            category="com.servoy.eclipse.ui"
            class="com.servoy.eclipse.profiler.views.ProfilerView"
            icon="icons/profiler_view.png"
            id="com.servoy.eclipse.uicom.servoy.eclipse.profiler.views.ProfilerView"
            name="Profiler">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="org.eclipse.debug.ui.DebugPerspective">
         <view
               id="com.servoy.eclipse.uicom.servoy.eclipse.profiler.views.ProfilerView"
               minimized="false"
               relationship="stack"
               relative="org.eclipse.ui.console.ConsoleView"
               visible="true">
         </view>
         <viewShortcut
               id="com.servoy.eclipse.uicom.servoy.eclipse.profiler.views.ProfilerView">
         </viewShortcut>
      </perspectiveExtension>
      <perspectiveExtension
            targetID="com.servoy.eclipse.ui.DesignPerspective">
         <viewShortcut
               id="com.servoy.eclipse.uicom.servoy.eclipse.profiler.views.ProfilerView">
         </viewShortcut>
         <view
               id="com.servoy.eclipse.uicom.servoy.eclipse.profiler.views.ProfilerView"
               minimized="false"
               relationship="stack"
               relative="org.eclipse.ui.console.ConsoleView"
               visible="false">
         </view>
      </perspectiveExtension>
   </extension>
</plugin>
